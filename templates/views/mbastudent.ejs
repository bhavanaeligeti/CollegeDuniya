        <h1 >Total Enquries</h1>
        <br>
     <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th>Enquery</th>
          <th>Answer</th>
          
        </tr>
      </thead>
      <tbody>
       <% if(data.length>0){
        data.forEach(function(row){
        %>
        <tr>
          <form action="/reply" method="post">
          <td><%= row.feedback %></td>
          <td><%= row.reply %></td>
         
          
        </form>
        </tr>
        
       
        <%    
      })} %>
      </tbody>
    </table>
  
  
  </div>
