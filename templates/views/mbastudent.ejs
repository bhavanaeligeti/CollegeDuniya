                    <img class="profile_img" src="student.jpg" alt="student dp" />
                    <h3>
                      <%= udata.name %>
                    </h3>
                  </div>
                  <div class="card-body">
                    
                    <p class="mb-0"><strong class="pr-1">College : </strong>
                      <%= udata.college %>
                    </p>
                    <p class="mb-0"><strong class="pr-1">Status : </strong>
