    <div id="Updates" class="collpase">
      <!-- <h1 style="text-align: center; color: red;"></h1> -->
      <div class="form_container" style="margin: 100px;">
        <form action="/register" name="form"  method="post">
          
         <div class="form_wrap form_grp">
             <div class="form_item" name="fname">
                 <label  name="fname">First Name</label>
                 <input type="hidden" name="fname" value="<%= udata.fname %>">
                 <input type="text" name="fname" maxlength="15" value="<%= udata.fname %>" disabled>
        
             </div>
             <div class="form_item">
                 <label>Last Name</label>
                 <input type="hidden" name="lname" value="<%= udata.lname %>"> 
                 <input type="text" name="lname" value="<%= udata.lname %>" maxlength="12" disabled>
        
             </div>
         </div>
         <div class="form_wrap">
             <div class="form_item">
                 <label >Email Address</label>
                 <input type="hidden" name="email" value="<%= udata.email %>"> 
                 <input type="text"    value="<%= udata.email %>" disabled>
        
             </div>
         </div>
        
         <div class="form_wrap">
             <div class="form_item">
                 <label for="phone">Phone</label>
                 <input type="hidden" id="phone" name="pnumber" value="<%= udata.mnumber %>">
                 <input type="text" id="phone"  value="<%= udata.mnumber%>" disabled>
                 
             </div>
         </div>
        
         <div class="form_wrap">
          <div class="form_item">
              <label for="text">Enquery</label>
              <input type="text" id="phone"  name="feedback" placeholder="Please Enter Your questions">
              <div class="error" id="phone"></div>
          </div>
        </div>
        
         <div class="btn">
           <input type="submit" id="btn2" value="Enquiry">
         </div>
        </form>
        </div>
    </div>

  </section>



  <script>
    const body = document.querySelector('body'),
      sidebar = body.querySelector('nav'),
      toggle = body.querySelector(".toggle"),
      searchBtn = body.querySelector(".search-box"),
      modeSwitch = body.querySelector(".toggle-switch"),
      modeText = body.querySelector(".mode-text");

    toggle.addEventListener("click", () => {
      sidebar.classList.toggle("close");
    })



    searchBtn.addEventListener("click", () => {
      sidebar.classList.remove("close");
    })



    modeSwitch.addEventListener("click", () => {
      body.classList.toggle("dark");

      if (body.classList.contains("dark")) {
        modeText.innerText = "Light mode";
      } else {
        modeText.innerText = "Dark mode";

      }
    });

    function dashboard() {
      document.getElementById("Dashboard").classList.add('collpase-open');
      document.getElementById("Dashboard").classList.remove('collpase');
      document.getElementById("Marksheet").classList.remove('collpase-open');
      document.getElementById("Marksheet").classList.add('collpase');
      document.getElementById("Account_detail").classList.remove('collpase-open');
      document.getElementById("Account_detail").classList.add('collpase');
      document.getElementById("Updates").classList.remove('collpase-open');
      document.getElementById("Updates").classList.add('collpase');

    }

    function visibility() {
      document.getElementById("Account_detail").classList.add('collpase-open');
      document.getElementById("Account_detail").classList.remove('collpase');
      document.getElementById("Marksheet").classList.remove('collpase-open');
      document.getElementById("Marksheet").classList.add('collpase');
      document.getElementById("Dashboard").classList.remove('collpase-open');
      document.getElementById("Dashboard").classList.add('collpase');
      document.getElementById("Updates").classList.remove('collpase-open');
      document.getElementById("Updates").classList.add('collpase');
    }

    function Marksheet() {

      document.getElementById("Marksheet").classList.add('collpase-open');
      document.getElementById("Marksheet").classList.remove('collpase');
      document.getElementById("Account_detail").classList.remove('collpase-open');
      document.getElementById("Account_detail").classList.add('collpase');
      document.getElementById("Dashboard").classList.remove('collpase-open');
      document.getElementById("Dashboard").classList.add('collpase');
      document.getElementById("Updates").classList.remove('collpase-open');
      document.getElementById("Updates").classList.add('collpase');

    }
    function updates() {
      document.getElementById("Updates").classList.add('collpase-open');
      document.getElementById("Updates").classList.remove('collpase');
      document.getElementById("Marksheet").classList.remove('collpase-open');
      document.getElementById("Marksheet").classList.add('collpase');
      document.getElementById("Dashboard").classList.remove('collpase-open');
      document.getElementById("Dashboard").classList.add('collpase');
      document.getElementById("Account_detail").classList.remove('collpase-open');
      document.getElementById("Account_detail").classList.add('collpase');

    }

  </script>



</body>

